<style>
#view-modes-activation {
  margin-top: 0.83em;
}

#view-modes-activation-list {
  padding: 0;
  list-style: none;
}

:is(#view-modes-zen-mode-on, #view-modes-presentation-mode-on) {
  background: none;
  border: none;
  margin: 0;
  padding: 0;
  cursor: pointer;
}
:is(#view-modes-zen-mode-on, #view-modes-presentation-mode-on) svg {
  transform: translateY(0.15em);
  transition: transform var(--starlight-view-modes-animation-duration) cubic-bezier(0.4, 0, 0.2, 1);
}
:is(#view-modes-zen-mode-on, #view-modes-presentation-mode-on) :is(#view-modes-zen-mode-on-text, #view-modes-presentation-mode-on-text) {
  padding-left: 0.25rem;
}

body.view-modes-zen-mode-table-of-contents-disabled :is(#view-modes-zen-mode-on, #view-modes-presentation-mode-on):hover > svg {
  transform: rotate(180deg) translateY(-0.15em);
}

body.view-modes-zen-mode.view-modes-zen-mode-table-of-contents-enabled :is(#view-modes-zen-mode-on, #view-modes-presentation-mode-on) > svg {
  transform: rotate(180deg) translateY(-0.15em);
}
</style>
  
<script>
  import config from 'virtual:starlight-view-modes-config';
  import { deactivateAllModes, activateZenMode, activatePresentationMode, deactivateZenMode } from '../libs/SharedMethods';

  function isAnyModeEnabledAndShownInTOC(config: any) {
    const modes = [
        { enabled: config.zenModeEnabled, showInTOC: config.zenModeShowSwitchInTableOfContents },
        { enabled: config.presentationModeEnabled, showInTOC: config.presentationModeShowSwitchInTableOfContents },
    ];

    return modes.some(mode => mode.enabled && mode.showInTOC);
}

  document.addEventListener('DOMContentLoaded', () => {
    const modes = document.getElementById('view-modes-activation');
    const zenModeOn = document.getElementById('view-modes-zen-mode-on');
    const presentationModeOn = document.getElementById('view-modes-presentation-mode-on');
    
    const zenMode = sessionStorage.getItem('viewModesZenMode') === 'true';
    const presentationMode = sessionStorage.getItem('viewModesPresentationMode') === 'true';

    if (isAnyModeEnabledAndShownInTOC(config)) {
      modes?.style.setProperty('display', 'block');
    }

    if (config.zenModeEnabled && config.zenModeShowSwitchInTableOfContents) {
      zenModeOn?.style.setProperty('display', 'block');
      zenModeOn?.addEventListener('click', () => {
        if (document.body.classList.contains('view-modes-zen-mode')) {
            deactivateZenMode();
        }
        else {
            activateZenMode(); 
        }
      });
    }

    if (config.presentationModeEnabled && config.presentationModeShowSwitchInTableOfContents) {
      presentationModeOn?.style.setProperty('display', 'block');
      presentationModeOn?.addEventListener('click', () => {
        deactivateAllModes();
        activatePresentationMode();
      });
    }

    // Session storage
    if (zenMode) {
      activateZenMode();
    }
    if (presentationMode) {
      activatePresentationMode();
    }    

    if (config.zenModeShowFooter) {
        document.body.classList.add("view-modes-zen-mode-footer-enabled");
    } else {
        document.body.classList.add("view-modes-zen-mode-footer-disabled");
    }

    if (config.zenModeShowHeader) {
        document.body.classList.add("view-modes-zen-mode-header-enabled");
    } else {
        document.body.classList.add("view-modes-zen-mode-header-disabled");
    }

    if (config.zenModeShowSidebar) {
        document.body.classList.add("view-modes-zen-mode-sidebar-enabled");
    } else {
        document.body.classList.add("view-modes-zen-mode-sidebar-disabled");
    }

    if (config.zenModeShowTableOfContents) {
        document.body.classList.add("view-modes-zen-mode-table-of-contents-enabled");
    } else {
        document.body.classList.add("view-modes-zen-mode-table-of-contents-disabled");
    }

    if (document.documentElement.dataset.hasSidebar === undefined) {
        document.body.classList.add("view-modes-zen-mode-template-splash");
    } else {
        document.body.classList.add("view-modes-zen-mode-template-doc");
    }
  });
</script>
